def main():
    print("Menu:")
    print("1 - Hamburger")
    print("2 - Pizza")
    print("3 - Salad")
    print("4 - Exit")
    option = int(input("Choose an option (1 to 4): "))

    if option == 1:
        print("You chose Hamburger.")
    elif option == 2:
        print("You chose Pizza.")
    elif option == 3:
        print("You chose Salad.")
    elif option == 4:
        print("Exiting the menu...")
    else:
        print("Invalid option.")

if __name__ == "__main__":
    main()
